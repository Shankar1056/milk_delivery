<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/prepay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PrePay"
                    android:fontFamily="@font/typoupright_bt"
                    android:textSize="35sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="10dp"
            />
            <TextView
                    android:id="@+id/datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:text="10:10am/pm, 12 may 2018,30C"
                    android:fontFamily="@font/ariali"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/newuser"
                    android:layout_marginRight="10dp"/>

            <TextView
                    android:id="@+id/appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shree Agro Diary Farm"
                    android:fontFamily="@font/optionyx"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintTop_toTopOf="@+id/prepay"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="70dp"
                    android:textSize="30sp"
                    android:textAllCaps="true"/>
            <View
                    android:id="@+id/view"
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appname"/>
            <TextView
                    android:id="@+id/energysle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Energy For Sale"
                    android:fontFamily="@font/typoupright_bt"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                    android:id="@+id/subscribepresentTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/energysle"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Subscribe present month"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:fontFamily="@font/typoupright_bt"
                    android:background="@drawable/roundedcorner_text"/>
            <TextView
                    android:id="@+id/subscribefifteendaysTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/subscribepresentTV"
                    android:text="Subscribe for 15 days"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:textSize="30sp"
                    android:fontFamily="@font/typoupright_bt"
                    android:background="@drawable/roundedcorner_text"/>
            <TextView
                    android:id="@+id/subscribetendaysTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/subscribefifteendaysTV"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Subscribe for 10 days"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:fontFamily="@font/typoupright_bt"
                    android:background="@drawable/roundedcorner_text"/>

            <TextView
                    android:id="@+id/subscribethreedaysTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/subscribetendaysTV"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Subscribe for 3 days"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:fontFamily="@font/typoupright_bt"
                    android:background="@drawable/roundedcorner_text"/>
            <TextView
                    android:id="@+id/subscribeonedaysTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@+id/subscribethreedaysTV"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Subscribe for 3 days"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:fontFamily="@font/typoupright_bt"
                    android:background="@drawable/roundedcorner_text"/>
            <TextView
                    android:id="@+id/freedelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/subscribeonedaysTV"
                    android:layout_marginBottom="15dp"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="Free Home elivery For One Whom We Serve with Love"
                    android:fontFamily="@font/typoupright_bt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>