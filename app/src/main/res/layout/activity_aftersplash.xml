<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="40sp"
            android:text="@string/home"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/typoupright_bt"
    />

    <TextView
            android:id="@+id/daytime"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/ariali"
            android:text="10:10am/pm, 12 may 2018, 30C"
            app:layout_constraintTop_toTopOf="@+id/home"
            app:layout_constraintBottom_toBottomOf="@+id/home"/>

    <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Languge"
            android:fontFamily="@font/typoupright_bt"
            app:layout_constraintTop_toBottomOf="@+id/daytime"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedcorner_text"
            android:textSize="25sp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="10dp"/>

    <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Color"
            android:fontFamily="@font/typoupright_bt"
            app:layout_constraintTop_toBottomOf="@+id/language"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedcorner_text"
            android:textSize="25sp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_marginTop="10dp"/>
    <ImageView
            android:id="@+id/logo"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:background="@drawable/logo_icon"
            app:layout_constraintTop_toBottomOf="@+id/color"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/newuser"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="New User"
            android:gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/optionyx"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/roundedcorner_text"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:id="@+id/signin"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textAllCaps="true"
            android:gravity="center"
            android:fontFamily="@font/optionyx"
            app:layout_constraintTop_toBottomOf="@+id/newuser"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/roundedcorner_text"
            android:textSize="35sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"/>

    <TextView
            android:id="@+id/delivertTV"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/signin"
              android:textColor="@color/colorWhite"
              android:text="Free Home Delivery For One Whom We Love."
              android:fontFamily="@font/typoupright_bt"
              android:layout_marginTop="30dp"
              android:textSize="22sp"/>
    <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:background="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/delivertTV"/>


</android.support.constraint.ConstraintLayout>